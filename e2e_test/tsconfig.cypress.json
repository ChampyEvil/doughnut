{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "node16",
    "baseUrl": "./",
    "lib": [
      "es2022",
      "dom",
      "dom.iterable"
    ],
    "typeRoots": [
      "types",
      "node_modules",
      "node_modules/@types",
      "node_modules/@testing-library",
      "node_modules/@badeball/cypress-cucumber-preprocessor"
    ],
    "types": [
      "node",
      "cypress",
      "@testing-library/cypress",
      "@badeball/cypress-cucumber-preprocessor",
      "./support"
    ],
  },
  "exclude": [
    "cypress.config.ts",
    "config/ci.ts",
    "config/common.ts",
    "cypress",
    "node_modules"
  ],
  "include": [
    "**/*.ts",
    "**/*.js",
    "**/*.cjs"
  ]
}
