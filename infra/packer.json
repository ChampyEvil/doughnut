{
  "variables": {
    "repo_path": "https://github.com/nerds-odd-e/doughnut",
    "project_id": "carbon-syntax-298809",
    "source_image_family": "debian-11",
    "machine_type": "e2-medium",
    "region": "us-east1",
    "zone": "us-east1-b",
    "ssh_username": "packer"
  },

  "builders": [
    {
      "type": "googlecompute",
      "project_id": "{{ user `project_id` }}",
      "state_timeout": "10m",
      "machine_type": "{{ user `machine_type` }}",
      "source_image_family": "{{ user `source_image_family` }}",
      "region": "{{ user `region` }}",
      "zone": "{{ user `zone` }}",
      "image_description": "doughnut Debian11 MySQL80 base image provisioned with saltstack",
      "image_name": "doughnut-debian11-mysql80-base-saltstack",
      "ssh_username": "{{ user `ssh_username` }}",
      "disk_size": 20,
      "disk_type": "pd-ssd",
      "account_file": "{{ user `service_account_json` }}",
      "tags": "packer",
      "use_os_login": true,
      "use_internal_ip": false,
      "ssh_timeout": "10m"
    }
  ],

  "provisioners": [
    {
      "type": "salt-masterless",
      "local_state_tree": "salt/states",
      "local_pillar_roots": "salt/pillar",
      "remote_state_tree": "/srv/salt",
      "remote_pillar_roots": "/srv/pillar"
    }
  ]
}
