{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "types": [
      "vite/client", "jest" , "@types/jest" , "node" , "@testing-library/jest-dom"
    ],
    "useDefineForClassFields": true,
    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "src/*"
      ]
    },
    "lib": [
      "esnext",
      "dom"
    ]
  },
  "compileOnSave": true,
  "typeAcquisition": {
    "enable": true
  },
  "files": [
    "./vite.config.ts"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "tests/**/*.ts"
  ]
}
