{
    "name": "doughnut",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "https://github.com/nerds-odd-e/doughnut.git",
    "author": "Terry Yin <terry.yinzhe@gmail.com>",
    "license": "MIT",
    "scripts": {
        "cy:open": "cypress open",
        "cy:run": "cypress run",
        "sut": "backend/gradlew bootRun -p backend -Dspring.profiles.active=test",
        "backend_n_mobile_sut": "run-p -clnr sut mobile:sut",
        "open": "run-p -clnr sut cy:open",
        "test": "run-p -clnr sut cy:run",
        "open:with_mobile": "run-p -clnr backend_n_mobile_sut cy:open",
        "test:with_mobile": "run-p -clnr backend_n_mboile_sut cy:run",
        "sound": "node scripts/sound-monitor.js",
        "mobile:sut": "yarn mobile:build_run",
        "mobile:build": "cd mobile; flutter clean && flutter pub get && flutter build web --release --dart-define DOUGHNUT_BAZAAR_NOTES_API_URL=$DOUGHNUT_BAZAAR_NOTES_API_URL ;cd - ",
        "mobile:run": "cd mobile/build/web; python -m http.server 8000; cd -",
        "mobile:build_run": "yarn mobile:build && yarn mobile:run"
    },
    "cypress-cucumber-preprocessor": {
        "nonGlobalStepDefinitions": true,
        "nonGlobalStepBaseDir": "cypress/step_definitions"
    },
    "devDependencies": {
        "@testing-library/cypress": "^7.0.6",
        "cypress": "^7.0",
        "cypress-cucumber-preprocessor": "^4.1",
        "cypress-file-upload": "^5.0.3",
        "cypress-plugin-snapshots": "^1.4.4",
        "npm-run-all": "^4.1.5"
    },
    "dependencies": {
        "request": "^2.88.2"
    }
}
