{
    "name": "doughnut",
    "version": "1.0.0",
    "main": "index.js",
    "repository": "https://github.com/nerds-odd-e/doughnut.git",
    "author": "Terry Yin <terry.yinzhe@gmail.com>",
    "license": "MIT",
    "scripts": {
        "cy:open": "cypress open",
        "cy:run": "cypress run",
        "sut": "backend/gradlew bootRun -p backend -Dspring.profiles.active=test",
        "backend_n_frontend_sut": "run-p -clnr sut frontend:sut",
        "open": "run-p -clnr sut cy:open",
        "test": "run-p -clnr sut cy:run",
        "open:with_frontend": "run-p -clnr backend_n_frontend_sut cy:open",
        "test:with_frontend": "run-p -clnr backend_n_frontend_sut cy:run",
        "sound": "node scripts/sound-monitor.js",
        "frontend:sut": "yarn frontend:build_run",
        "frontend:build": "cd frontend; flutter clean && flutter pub get && flutter build web --release --dart-define DOUGHNUT_BAZAAR_NOTES_API_URL=$DOUGHNUT_BAZAAR_NOTES_API_URL ;cd - ",
        "frontend:run": "cd frontend/build/web; python -m http.server 8000; cd -",
        "frontend:build_run": "yarn frontend:build && yarn frontend:run"
    },
    "cypress-cucumber-preprocessor": {
        "nonGlobalStepDefinitions": true
    },
    "devDependencies": {
        "@testing-library/cypress": "^7.0.6",
        "cypress": "^7.0",
        "cypress-cucumber-preprocessor": "^4.0",
        "cypress-file-upload": "^5.0.3",
        "cypress-plugin-snapshots": "^1.4.4",
        "npm-run-all": "^4.1.5"
    },
    "dependencies": {
        "request": "^2.88.2"
    }
}
