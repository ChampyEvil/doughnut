{
  "name": "doughnut",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/nerds-odd-e/doughnut.git",
  "author": "Terry Yin <terry.yinzhe@gmail.com>",
  "license": "MIT",
  "scripts": {
    "frontend:build": "cd frontend && yarn && yarn build && cd -",
    "frontend:lint": "cd frontend && yarn && yarn lint && cd -",
    "frontend:test": "cd frontend && yarn && yarn test && cd -",
    "frontend:sut": "cd frontend && yarn && yarn dev && cd -",
    "backend:test": "./gradlew test",
    "backend:build": "backend/gradlew -p backend build -x test",
    "backend:prod_build": "backend/gradlew -p backend build -x test -Dspring.profiles.active=prod",
    "cy:open": "cypress open --env configFile=development",
    "cy:run:dev": "cypress run --env configFile=development",
    "cy:run": "cypress run --env configFile=ci",
    "sut": "./gradlew bootRunE2E",
    "open": "yarn frontend:build && run-p -clnr sut cy:open",
    "test": "yarn frontend:build && run-p -clnr sut cy:run",
    "test:dev": "yarn frontend:build && run-p -clnr sut frontend:sut cy:run:dev",
    "test:open": "yarn frontend:build && run-p -clnr sut frontend:sut cy:open",
    "sound": "node scripts/sound-monitor.js",
    "format": "prettier . --write"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true,
    "nonGlobalStepBaseDir": "cypress/step_definitions"
  },
  "devDependencies": {
    "@testing-library/cypress": "8.0.2",
    "browserify": "^17.0.0",
    "cypress": "9.1.0",
    "cypress-cucumber-preprocessor": "4.3.0",
    "cypress-file-upload": "5.0.8",
    "npm-run-all": "4.1.5",
    "prettier": "^2.5.0",
    "tsify": "5.0.4",
    "typescript": "^3.9"
  },
  "dependencies": {
    "@types/node": "^16.7.12",
    "request": "^2.88.2"
  }
}
