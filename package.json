  "license": "MIT",
  "dependencies": {
    "cypress": "^6.1.0",
    "cypress-cucumber-preprocessor": "^4.0.0",
    "npm-run-all": "^4.1.5"
  },
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "sut": "cd backend ; gradle bootRun --args='--spring.profiles.active=test'",
    "open": "run-p --race sut cy:open",
    "test": "run-p --race sut cy:run"
  },

  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": false
  }
}
