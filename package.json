{
  "name": "doughnut",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/nerds-odd-e/doughnut.git",
  "author": "Terry Yin <terry.yinzhe@gmail.com>",
  "license": "MIT",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "sut": "backend/gradlew bootRun -p backend -Dspring.profiles.active=test",
    "open": "run-p -clnr sut frontend:build_run cy:open",
    "test": "run-p -clnr sut frontend:build_run cy:run",
    "sound": "node scripts/sound-monitor.js",
    "frontend:build": "cd frontend; flutter clean && flutter build web; cd -",
    "frontend:run": "cd frontend/build/web; python -m http.server 8000; cd -",
    "frontend:build_run": "yarn frontend:build && yarn frontend:run"
  },
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": false
  },
  "devDependencies": {
    "@testing-library/cypress": "^7.0.4",
    "cypress": "^7.0",
    "cypress-cucumber-preprocessor": "^4.0",
    "cypress-file-upload": "^5.0.3",
    "cypress-plugin-snapshots": "^1.4.4",
    "npm-run-all": "^4.1.5"
  },
  "dependencies": {
    "request": "^2.88.2"
  }
}
